@{
    ViewData["Title"] = "SmartFA Area";
    Layout = "~/Areas/SmartFA/Views/Shared/_Layout_SmartFA.cshtml";
    ViewData["HideSidebar"] = true;
    var serialNumber = ViewData["SerialNumber"] as string ?? string.Empty;
    var currentUser = User?.Identity?.Name ?? "";
}
<div class="main-inner mt-2" id="repair-root" data-serial="@serialNumber" data-user="@currentUser">
    <div class="repair-toolbar">
        <button class="btn-back" type="button" onclick="goBack()">← Quay lại</button>
        <script>
            function goBack() {
                if (document.referrer && document.referrer !== window.location.href) {
                    window.history.back();
                } else {
                    window.location.href = '/SmartFA';
                }
            }
        </script>

    </div>
    <!-- Header: Fault info -->
    <section class="fault-header" id="fault-header">
        <div class="fh-item">
            <span class="fh-label">SerialNumber</span>
            <span class="fh-value" id="fault-sn">--</span>
        </div>
        <div class="fh-item">
            <span class="fh-label">ModelName</span>
            <span class="fh-value" id="fault-model">--</span>
        </div>
        <div class="fh-item">
            <span class="fh-label">ErrorCode</span>
            <span class="fh-value" id="fault-error">--</span>
        </div>
        <div class="fh-item">
            <span class="fh-label">ErrorDesc</span>
            <span class="fh-value" id="fault-desc">--</span>
        </div>
        <div class="fh-item">
            <span class="fh-label">TestGroup</span>
            <span class="fh-value" id="fault-group">--</span>
        </div>
    </section>

    <!-- AI DEBUG Suggestion -->
    <section class="card">
        <div class="card-header">
            <span class="card-header-dot"></span>
            <div>
                <div class="card-title">Repair Suggestion & Replacement Analysis</div>
                <div class="card-subtitle">Gợi ý sửa chữa dựa trên lịch sử lỗi, vị trí hỏng và tỷ lệ thay thế thực tế.</div>
            </div>
        </div>

        <table class="ai-table">
            <thead>
                <tr>
                    <th>REASON_CODE</th>
                    <th>ERROR_ITEM_CODE</th>
                    <th>RATE(%)</th>
                </tr>
            </thead>
            <tbody id="ai-suggestions-body">
                <tr>
                    <td colspan="5" class="text-center text-muted">Chưa có dữ liệu</td>
                </tr>
            </tbody>
        </table>
    </section>

    <!-- Cookbooks -->
    <section class="cookbook-layout" id="cookbook-section">
        <div class="cookbook-column" id="nv-cookbook">
            <div class="cookbook-column-header">
                <div>
                    <div class="cookbook-title">NV Cookbook</div>
                    <div class="cookbook-note" id="nv-test-note"></div>
                </div>
            </div>
            <div class="cookbook-card">
                <div class="cookbook-header-row">
                    <span>Debug steps</span>
                </div>
                <div class="cookbook-steps" id="nv-steps"></div>
            </div>
        </div>

        <div class="cookbook-column" id="fxn-cookbook">
            <div class="cookbook-column-header">
                <div>
                    <div class="cookbook-title">FXN Cookbook</div>
                    <div class="cookbook-note" id="fxn-test-note"></div>
                </div>
                <button id="add-fxn-btn" class="btn-pill">Thêm cookbook FXN</button>
            </div>
            <div class="cookbook-card">
                <div class="cookbook-header-row">
                    <span>Debug steps</span>
                </div>
                <div class="cookbook-steps" id="fxn-steps"></div>
            </div>
        </div>
    </section>

    <!-- Footer buttons -->
    <div class="footer-actions">
        <button class="btn-primary">END REPAIR</button>
    </div>
</div>

@section Scripts {
    <script src="~/assets/Areas/SmartFA/js/repair.js?v=@DateTime.Now.Ticks"></script>
    <style>
        :root {
            --bg-main: #050824;
            --bg-panel: rgba(18, 27, 69, 0.95);
            --bg-card: rgba(17, 27, 78, 0.98);
            --bg-card-dark: #151b3b;
            --accent: #38f9ff;
            --accent-soft: rgba(56, 249, 255, 0.28);
            --accent-danger: #ff4b55;
            --text-main: #f5f7ff;
            --text-muted: #9da6cf;
            --border-subtle: rgba(255, 255, 255, 0.08);
            --radius-lg: 18px;
            --radius-md: 12px;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
            background: radial-gradient(circle at 0 0, #32385d 0, #050824 45%, #020314 100%);
            color: var(--text-main);
            min-height: 100vh;
        }

        body.layout-no-sidebar {
            padding-left: 0;
        }

        .main-inner {
            max-width: 1200px;
            margin: 0 auto;
        }

        .repair-toolbar {
            display: flex;
            justify-content: flex-start;
            margin-bottom: 8px;
        }

        .btn-back {
            background: transparent;
            color: var(--text-main);
            border: 1px solid var(--border-subtle);
            border-radius: 999px;
            padding: 8px 14px;
            font-weight: 600;
            letter-spacing: 0.02em;
            transition: all 0.2s ease;
            box-shadow: 0 8px 18px rgba(0, 0, 0, 0.35);
        }

        .btn-back:hover {
            background: var(--accent-soft);
            color: #ffffff;
            border-color: var(--accent);
            transform: translateY(-1px);
        }

        /* Header – fault information */
        .fault-header {
            display: grid;
            grid-template-columns: repeat(5, minmax(0, 1fr));
            gap: 8px;
            background: var(--bg-panel);
            border-radius: var(--radius-lg);
            padding: 10px 14px;
            border: 1px solid var(--border-subtle);
            box-shadow: 0 0 25px rgba(0, 0, 0, 0.5);
            margin-bottom: 14px;
        }

        .fh-item {
            display: flex;
            flex-direction: column;
            gap: 3px;
        }

        .fh-label {
            font-size: 11px;
            text-transform: uppercase;
            letter-spacing: 0.08em;
            color: var(--text-muted);
        }

        .fh-value {
            font-size: 13px;
            font-weight: 600;
            color: #ffffff;
        }

        .fh-aging {
            text-align: right;
        }

        /* AI Suggestion card */
        .card {
            background: var(--bg-panel);
            border-radius: var(--radius-lg);
            border: 1px solid var(--border-subtle);
            box-shadow: 0 0 22px rgba(0, 0, 0, 0.55);
            padding: 12px 16px 10px;
            margin-bottom: 18px;
        }

        .card-header {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 10px;
        }

        .card-header-dot {
            width: 9px;
            height: 9px;
            border-radius: 999px;
            background: #64ff8c;
            box-shadow: 0 0 7px #64ff8c;
        }

        .card-title {
            font-size: 14px;
            font-weight: 600;
        }

        .card-subtitle {
            font-size: 11px;
            color: var(--text-muted);
        }

        .ai-table {
            width: 100%;
            border-collapse: collapse;
            font-size: 12px;
            margin-top: 4px;
        }

            .ai-table thead {
                background: #171f4b;
            }

            .ai-table th,
            .ai-table td {
                padding: 6px 8px;
                text-align: left;
            }

            .ai-table th {
                font-weight: 600;
                color: var(--text-muted);
                border-bottom: 1px solid var(--border-subtle);
                font-size: 11px;
            }

            .ai-table tbody tr {
                background: var(--bg-card);
            }

                .ai-table tbody tr td {
                    border-bottom: 1px solid rgba(255, 255, 255, 0.03);
                }

        .ai-highlight {
            color: #ffde6a;
            font-weight: 600;
        }

        .ai-percent {
            color: var(--accent);
        }

        .ai-feedback-cell {
            text-align: right;
            white-space: nowrap;
        }

        /* Common buttons */
        .btn-pill {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 4px 12px;
            border-radius: 999px;
            border: 1px solid rgba(255, 255, 255, 0.18);
            background: transparent;
            color: var(--text-muted);
            font-size: 11px;
            font-weight: 500;
            letter-spacing: 0.02em;
            cursor: pointer;
            transition: background 0.16s ease, color 0.16s ease, border-color 0.16s ease, box-shadow 0.16s ease, transform 0.06s;
        }

            .btn-pill:hover {
                transform: translateY(-1px);
                border-color: var(--accent);
                box-shadow: 0 0 8px rgba(56, 249, 255, 0.4);
            }

        /* Cookbook area */
        .cookbook-layout {
            display: grid;
            grid-template-columns: repeat(2, minmax(0, 1fr));
            gap: 12px;
        }

        @@media (max-width: 820px) {
            .cookbook-layout {
                grid-template-columns: minmax(0, 1fr);
            }
        }

        .cookbook-column-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 6px;
        }

        .cookbook-title {
            font-size: 15px;
            font-weight: 600;
        }

        .cookbook-note {
            font-size: 11px;
            color: var(--accent);
            margin-top: 2px;
        }

        .btn-outline {
            border-radius: 999px;
            border: 1px solid var(--border-subtle);
            font-size: 11px;
            padding: 4px 10px;
            background: rgba(255, 255, 255, 0.02);
            cursor: pointer;
            color: var(--text-muted);
        }

        .cookbook-card {
            background: radial-gradient(circle at top left, #283876 0, #12193b 40%, #0b1027 100%);
            border-radius: var(--radius-lg);
            border: 1px solid rgba(255, 255, 255, 0.12);
            overflow: hidden;
        }

        .cookbook-header-row {
            padding: 7px 14px;
            background: rgba(7, 12, 40, 0.9);
            font-size: 11px;
            text-transform: uppercase;
            letter-spacing: 0.08em;
            color: var(--text-muted);
            border-bottom: 1px solid rgba(255, 255, 255, 0.08);
        }

        .cookbook-steps {
            padding: 6px 6px 8px;
        }

        .step-row {
            padding: 8px 10px;
            background: rgba(7, 12, 40, 0.75);
            border-radius: 10px;
            margin-bottom: 6px;
            border: 1px solid rgba(255, 255, 255, 0.03);
        }

            .step-row:nth-child(odd) {
                background: rgba(11, 19, 63, 0.92);
            }

        .step-text {
            font-size: 13px;
        }

        .step-index {
            color: var(--text-muted);
            margin-right: 6px;
        }

        .step-actions { display: none; }
        .step-note { display: none; }

        .footer-actions {
            margin-top: 14px;
            display: flex;
            justify-content: flex-end;
            gap: 10px;
        }

        .btn-ghost {
            border-radius: 999px;
            border: 1px solid var(--border-subtle);
            background: transparent;
            color: var(--text-muted);
            font-size: 12px;
            padding: 6px 14px;
            cursor: pointer;
        }

        .btn-primary {
            border-radius: 999px;
            border: none;
            background: linear-gradient(90deg, #34e5ff, #6f7bff);
            color: #020212;
            font-size: 12px;
            padding: 7px 18px;
            cursor: pointer;
            font-weight: 600;
            box-shadow: 0 0 14px rgba(70, 181, 255, 0.6);
        }

            .btn-primary:hover {
                filter: brightness(1.05);
            }
    </style>
}
