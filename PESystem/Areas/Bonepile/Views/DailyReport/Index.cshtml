@{
    ViewData["Title"] = "Daily Report";
    Layout = "~/Areas/Bonepile/Views/Shared/_Layout_Bonepile.cshtml";
}

<div class="data-card chart-card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div class="fw-bold">Switch Bonepile 2.0 Status</div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped bonepile-table report-repair-table" id="reportRepairBeforeTable" style="width:100%">
                <thead class="table-light">
                    <tr>
                        <th rowspan="2">Product Line</th>
                        <th rowspan="2">0/1/2 SA BP Total Qty</th>
                        <th rowspan="2">Approved scrap</th>
                        <th rowspan="2">FXV Online WIP</th>
                        <th colspan="2">Need to Repair</th>
                        <th colspan="2">CB repaired twice but</th>
                        <th rowspan="2">Others</th>
                        <th rowspan="2">Total</th>
                    </tr>
                    <tr>
                        <th>CB repaired once but aging day &lt; 30</th>
                        <th>CB repaired once but aging day &gt; 30</th>
                        <th>aging day &lt; 30</th>
                        <th>aging day &gt; 30</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/assets/Areas/Bonepile/js/daily_report.js?v=@DateTime.Now.Ticks"></script>
}
