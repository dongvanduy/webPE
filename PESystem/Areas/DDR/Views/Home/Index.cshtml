@{
    ViewData["Title"] = "DPU-MEM";
    Layout = "~/Areas/DDR/Views/Shared/Layout_DDR.cshtml";
}
<section class="dashboard section">
    <div class="data-card" data-api-base="@ViewBag.ApiBaseUrl">
        <div class="d-flex align-items-center justify-content-between mb-3">
            <h5 class="mb-0">Thống kê Status</h5>
            <span class="text-muted" id="current-status-summary"></span>
        </div>
        <div id="current-status-chart" style="height: 420px;"></div>
    </div>
</section>

<div class="modal fade" id="currentStatusModal" tabindex="-1" aria-labelledby="currentStatusModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="currentStatusModalLabel">Chi tiết Status</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered align-middle" id="status-detail-table" style="width:100%">
                        <thead>
                            <tr>
                                <th>Bonepile</th>
                                <th>SN</th>
                                <th>ModelName</th>
                                <th>HB/MB</th>
                                <th>Remark</th>
                                <th>DDR Tool test result</th>
                                <th>QTY RAM FAIL</th>
                                <th>NV Instruction(All)</th>
                                <th>All rework of FXV</th>
                                <th>Current Status</th>
                                <th>Remark2</th>
                                <th>Type</th>
                                <th>First Fail DPU Time</th>
                                <th>Description first fail DPU_MEM</th>
                                <th>Cut In BP2</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/assets/Areas/DDR/home.js?v=@DateTime.Now.Ticks"></script>
}
