@{
    ViewData["Title"] = "DPU-MEM";
    Layout = "~/Areas/DDR/Views/Shared/Layout_DDR.cshtml";
}

<section>
    <div class="data-card" data-api-base="@ViewBag.ApiBaseUrl">
        <div class="col-md-7">
            <div class="row g-2 align-items-start">
                <div class="col-md-5">
                    <textarea name="serialNumbers" id="sn-input" rows="3" placeholder="Nhập SerialNumber" class="form-control"></textarea>
                </div>
                <div class="col-md-2 d-flex flex-column gap-2">
                    <select id="hb-mb" class="form-select w-100" aria-label="HB/MB">
                        <option selected value="HB">HB</option>
                        <option value="MB">MB</option>
                    </select>
                    <select id="typeBonepile" class="form-select w-100" aria-label="type bonepile">
                        <option selected value="BP-10">BP-10</option>
                        <option value="BP-20">BP-20</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button id="input-btn" class="btn btn-ne w-100" type="button">
                        <i class="fas fa-sync"></i> Input
                    </button>
                </div>
            </div>
        </div>

        <input type="hidden" id="repairPerson" value="@User.Identity.Name" />
    </div>
</section>

@section Scripts {
    <script src="~/assets/Areas/DDR/input.js?v=@DateTime.Now.Ticks"></script>
}
