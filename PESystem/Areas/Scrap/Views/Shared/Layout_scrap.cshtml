@using PESystem.Helpers
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scrap</title>
    <link rel="icon" href="~/assets/img/scrap.png" type="image/png">
    <link href="~/css/site.min.css" rel="stylesheet" />
    <link href="~/assets/css/nvidia-theme.css?v=3" rel="stylesheet" />
    <link href="~/lib/all-fa-icon/css/all.min.css" rel="stylesheet" />
    <link href="~/assets/vendor/remixicon/remixicon.css" rel="stylesheet" />
    <link href="~/lib/datatable/style.css" rel="stylesheet" />
    <link href="~/lib/datatable/jquery.datatables.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <script>
        (function () {
            const isSidebarFixed = localStorage.getItem('isSidebarFixed') === 'true';
            if (isSidebarFixed) {
                document.documentElement.classList.add('sidebar-expanded');
            } else {
                document.documentElement.classList.remove('sidebar-expanded');
            }
        })();
    </script>
    <!-- Sidebar dọc -->
    <div id="sidebar" class="sidebar">
        <!-- Logo and Dashboard with fixed checkbox -->
        <div class="dashboard-container">
            <a href="@Url.Action("Home", "Home", new { area = "" })">
                <img src="~/assets/img/scrap.png" style="width:36px; height:36px;" class="logo" />
            </a>
            <span class="spanTitle" style="font-size: 1.0rem; font-weight: bold;">Scrap</span>
            <div class="fixed-checkbox">
                <input type="checkbox" id="toggleSidebarFixed" title="Giữ cố định" />
                <label for="toggleSidebarFixed" title="Giữ cố định">
                    <i class="ri-checkbox-blank-circle-line"></i>
                </label>
            </div>
        </div>
        <nav class="nav flex-column">
            <!-- Menu Items -->
            <a href="@Url.Action("Home", "Home", new { area = "" })" class="nav-link"><i class="fas fa-home"></i> <span>Trang chủ</span></a>
            <a href="@Url.Action("Index", "Home", new { area = "Scrap" })" class="nav-link @ViewContext.IsActive("Home", "Index")"><i class=" fas fa-dashboard"></i> <span>Dashboard</span></a>
            <a href="@Url.Action("Index", "Function0", new { area = "Scrap" })" class="nav-link @ViewContext.IsActive("Function0", "Index")"><i class="fa fa-exclamation-triangle"></i> <span>Process can't repair</span></a>
            <a href="@Url.Action("Index", "PendingGuide", new { area = "Scrap" })" class="nav-link @ViewContext.IsActive("PendingGuide", "Index")"><i class="fa fa-guide"></i> <span>Pending Guide</span></a>
            <a href="@Url.Action("Index", "Function1", new { area = "Scrap" })" class="nav-link @ViewContext.IsActive("Function1", "Index")"><i class="fa fa-spinner"></i> <span>Waitting SPE approve</span></a>
            <a href="@Url.Action("Index", "Function", new { area = "Scrap" })" class="nav-link @ViewContext.IsActive("Function", "Index")"><i class="fa fa-certificate"></i> <span>SPE already approved</span></a>
            <a href="@Url.Action("Index", "Progress", new { area = "Scrap" })" class="nav-link @ViewContext.IsActive("Progress", "Index")"><i class="fa fa-search"></i> <span>Search</span></a>
            <a href="@Url.Action("Index", "MRB", new { area = "Scrap" })" class="nav-link @ViewContext.IsActive("MRB", "Index")"><i class="fa fa-plane"></i> <span>Move MRB status</span></a>
        </nav>

        <ul class="d-flex align-items-center list-unstyled m-0 user-panel">
            <!-- AVATAR DƯỚI CÙNG SIDEBAR -->
            @if (User.Identity.IsAuthenticated)
            {
                <div class="sidebar-avatar" id="avatarBtn">
                    <img src="~/assets/img/avatar.png" class="user-avatar" alt="User">

                    <span class="sidebar-avatar-name">
                        @User.FindFirst("FullName")?.Value
                    </span>
                </div>
            }
        </ul>
    </div>
    @if (User.Identity.IsAuthenticated)
    {
        <div class="user-info-card" id="userInfoCard">
            <div class="user-info-header">
                <img src="~/assets/img/avatar.png" class="user-avatar" alt="User">
                <div class="user-info-text">
                    <p class="user-name mb-0">@User.FindFirst("FullName")?.Value</p>
                    <p class="user-email mb-0">@User.FindFirst("Email")?.Value</p>
                </div>
            </div>
            <div class="user-info-actions">
                <a class="menu-item" asp-action="ChangePassword" asp-controller="Auth">
                    <i class="fas fa-key"></i> Đổi mật khẩu
                </a>
                <form asp-action="Logout" asp-controller="Auth" method="post" class="text-center">
                    <button type="submit" class="btn btn-ne w-100">Đăng xuất</button>
                </form>
            </div>
        </div>
    }
    <div class="dashboard-stage">
        <div class="dashboard-wrapper">
            <!--SPINER-->
            <div id="spinner-overlay">
                <span class="loader"></span>
            </div>
            @RenderBody()
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.min.js?v=4" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/sweetalert2/dist/sweetalert2.all.js"></script>
    <script src="~/lib/datatable/jquery.datatables.min.js"></script>
    <script src="~/lib/excel/xlsx.full.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

