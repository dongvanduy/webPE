<!-- ===========================
      CSS PRO EDITION
=========================== -->
<style>
    .dashboard-wrapper {
        padding: 10px;
    }
    /* ===== GRID LAYOUT PRO ===== */
    .module-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
        gap: 18px;
        padding-bottom: 32px;
    }

    .module-item {
        aspect-ratio: 1 / 1; /* 🔥 Tạo hình vuông */
        max-width: 150px;
        border-radius: 14px;
        padding: 10px;
        text-align: center;
        font-weight: bold;
        text-decoration: none;
        display: flex;
        flex-direction: column;
        justify-content: center; /* Căn giữa icon + text */
        align-items: center;
        background: rgba(255,255,255,0.25);
        box-shadow: 0 4px 14px rgba(0, 0, 0, 0.15);
        transition: 0.25s ease;
        backdrop-filter: blur(6px);
    }

        .module-item:hover {
            transform: translateY(-4px);
            box-shadow: 0 10px 22px rgba(0, 0, 0, 0.25);
            background: rgba(255, 255, 255, 1);
        }

        .module-item:hover span {
            font-size: 11px;
            font-weight: 600;
            color: #000 !important;
        }
        .module-item img {
            width: 60%;
            height: 60%;
            object-fit: contain;
            margin-bottom: 6px; /* cách text một chút */
            filter: drop-shadow(0 4px 8px rgba(0,0,0,0.12));
        }

        .module-item span {
            font-size: 11px;
            font-weight: 600;
            color: #fff !important;
        }


    /* Fade-In Animation */
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(15px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
